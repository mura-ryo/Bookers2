<main>
  <div class= "container px-5 px-sm-0">
    <div class= "row">
      <div class= "col-md-3">
<!-- ユーザーの詳細 -->
        <%= render 'users/userinfo', user: @user %>
<!-- 新規投稿 -->
        <%= render 'books/post', book: Book.new %>
      </div>
      <div class= "col-md-8 offset-md-1">
<!-- 検索フォーム -->
        <%= render 'searches/search' %>
<!-- ユーザーの投稿一覧 -->
        <%= render 'books/index', books: @books %>
      </div>
    </div>
  </div>
</main>